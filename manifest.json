{
    "name": "OTP Display App",
    "short_name": "OTP App",
    "version": "1.0",
    "manifest_version": 2,
    "start_url": "index.html",
    "display": "standalone",
    "background_color": "#e6f2ff",
    "theme_color": "#e6f2ff",
    "icons": [
        {
            "src": "icon.png",
            "sizes": "192x192",
            "type": "image/png"
        }
    ],
    "permissions": ["storage"],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    }
}
